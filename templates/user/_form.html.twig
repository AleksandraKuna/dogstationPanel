{{ form_start(form) }}
{{ form_errors(form.password) }}
{# {{ form_widget(form) }} #}
<div class="row mx-0">
 <div class="form-floating mb-4 col-md-6 gx-1">
  {{ form_widget(form.login, {'attr': {'class': 'form-control', placeholder: 'login'}}) }}
  <label>{{ form_label(form.login) }}</label>
 </div>
 <div class="form-floating mb-4 col-md-6 gx-1">
  {{ form_widget(form.email, {'attr': {'class': 'form-control', placeholder: 'email'}}) }}
  <label>{{ form_label(form.email) }}</label>
 </div>
 <div class="form-floating mb-4 col-md-6 gx-1">
  {{ form_widget(form.name, {'attr': {'class': 'form-control', placeholder: 'name'}}) }}
  <label>{{ form_label(form.name) }}</label>
 </div>
 <div class="form-floating mb-4 col-md-6 gx-1">
  {{ form_widget(form.surname, {'attr': {'class': 'form-control', placeholder: 'surname'}}) }}
  <label>{{ form_label(form.surname) }}</label>
 </div>
 <div class="changePassword mb-4 row bg-info gx-1">
  <div class="text text-white">Wypełnij jeśli chcesz zmienić hasło</div>
  <div class="form-floating mb-4 col-md-6 gx-1">
   {{ form_widget(form.password.first, {'attr': {'class': 'form-control', placeholder: 'haslo'}})}}
   <label>{{ form_label(form.password.first) }}</label>
  </div>
  <div class="form-floating mb-4 col-md-6 gx-1">
   {{ form_widget(form.password.second, {'attr': {'class': 'form-control', placeholder: 'haslo'}})}}
   <label>{{ form_label(form.password.second) }}</label>
  </div>
 </div>
 <div class="form mb-4 col-md-6 gx-1">
  <label>{{ form_label(form.roles) }}</label>
  {{ form_widget(form.roles, {'attr': {'class': 'form-select', 'aria-label': 'status'}}) }}
 </div>
</div>
<button class="btn w-100 btn-primary btn-lg btn-block" type="submit">ZAPISZ</button>
{{ form_end(form) }}